<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="/test2.js"></script>

    <title>Register</title>
</head>

<body>
    <%- include('../partials/navbar') %>
        <h1>Register Driver</h1>

        <form action="/registerdriver" method="POST">

            <div>
                <label for="drUsername">Username</label>
                <input type="text" id="drUsername" name="newDriver[username]" required>
            </div>
            <div>
                <label for="drPassword">Password</label>
                <input type="password" name="newDriver[password]" id="drPassword" required>
            </div>

            <h2>Driver Details</h2>
            <div>
                <label for="drEmail">Email</label>
                <input type="email" name="newDriver[email]" id="drEmail" required>
            </div>

            <div>
                <label for="drName">Name</label>
                <input type="text" id="drName" name="newDriver[name]" required>
            </div>

            <div>
                <label for="drAge">Age</label>
                <input type="number" id="drAge" name="newDriver[age]" required>
            </div>
            <div>
                <label for="truckNo">Truck Number</label>
                <input type="text" id="truckNo" name="newDriver[truckNo]" required>
            </div>
            <div>
                <label for="drMobNo">Mobile Number</label>
                <input type="text" id="drMobNo" name="newDriver[mobileNo]" required>
            </div>
            <div>
                <label for="truckCap">Truck Capacity</label>
                <input type="text" id="truckCap" name="newDriver[truckCap]" required>
            </div>

            <div>
                <label for="transporterName">Transporter Name</label>
                <input type="text" id="transporterName" name="newDriver[transporterName]" required>
            </div>

            <h3>Interested Routes</h3>
            <div>
                <p>From</p>
                <label for="from1state">State</label>
                <input type="text" id="from1state" name="newDriver[from1state]" required>

                <label for="from1city">City</label>
                <input type="text" id="from1city" name="newDriver[from1city]" required>
            </div>
            <div>
                <p>To</p>
                <label for="to1state">State</label>
                <input type="text" id="to1state" name="newDriver[to1state]" required>

                <label for="to1city">City</label>
                <input type="text" id="to1city" name="newDriver[to1city]" required>
            </div>
            <div>
                <p>From</p>
                <label for="from2state">State</label>
                <input type="text" id="from2state" name="newDriver[from2state]" required>

                <label for="from2city">City</label>
                <input type="text" id="from2city" name="newDriver[from2city]" required>
            </div>
            <div>
                <p>To</p>
                <label for="to2state">State</label>
                <input type="text" id="to2state" name="newDriver[to2state]" required>

                <label for="to2city">City</label>
                <input type="text" id="to2city" name="newDriver[to2city]" required>
            </div>
            <div>
                <p>From</p>
                <label for="from3state">State</label>
                <input type="text" id="from3state" name="newDriver[from3state]" required>

                <label for="from3city">City</label>
                <input type="text" id="from3city" name="newDriver[from3city]" required>
            </div>
            <div>
                <p>To</p>
                <label for="to3state">State</label>
                <input type="text" id="to3state" name="newDriver[to3state]" required>

                <label for="to3city">City</label>
                <input type="text" id="to3city" name="newDriver[to3city]" required>
            </div>

            <select onchange="print_city('state1', this.selectedIndex);" id="sts1" name="newDriver[from1state]"
                class="form-control" required></select>
            <select id="state1" class="form-control" name="newDriver[from1city]" required></select>

            <select onchange="print_city('tostate1', this.selectedIndex);" id="tosts1" name="newDriver[to1state]"
                class="form-control" required></select>
            <select id="tostate1" class="form-control" name="newDriver[to1state]" required></select>


            <div class="buttons">
                <button class="btn btn-primary" type="submit">Submit</button>
                <button class="btn btn-danger" type="reset">Reset</button>
            </div>

        </form>
        <script language="javascript">print_state("sts1");</script>
        <script language="javascript">print_state("tosts1");</script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
</body>

</html>